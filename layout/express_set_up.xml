<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainContainer">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:id="@+id/topSpace"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:weightSum="1"
        android:id="@+id/inputContainer">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:id="@+id/lSpace"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="258dp"
            android:layout_height="match_parent"
            android:layout_weight="0.83"
            android:weightSum="1"
            android:id="@+id/container">

            <TextView
                android:text="Rent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rent"
                android:textSize="20sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pounds"
                android:ems="10"
                android:id="@+id/editRent"
                android:background="@android:drawable/editbox_background"
                android:hint="￡"
                android:textColor="?attr/colorBackgroundFloating"
                android:inputType="number" />

            <TextView
                android:text="Other Expenditure(Food, Social)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/other"
                android:textSize="20sp"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￡"
                android:ems="10"
                android:id="@+id/editOther"
                android:background="@android:drawable/editbox_background"
                android:hint="￡"
                android:textColor="?attr/colorBackgroundFloating"
                android:inputType="number" />

            <TextView
                android:text="Total Income (Loans, Family)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/total"
                android:textSize="20sp"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￡"
                android:ems="10"
                android:id="@+id/editTotal"
                android:background="@android:drawable/editbox_background"
                android:hint="￡"
                android:textColor="?attr/colorBackgroundFloating"
                android:inputType="number" />

            <TextView
                android:text="All Values should be monthly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/all"
                android:layout_marginTop="30dp"
                android:textSize="15sp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:id="@+id/rSpace"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:id="@+id/buttonContainer">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:id="@+id/lSpace2">

        </LinearLayout>

        <Button
            android:text="Continue"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:id="@+id/continueButton"
            android:elevation="0dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:id="@+id/rSpace2"
            android:layout_width="20dp"></LinearLayout>

    </LinearLayout>

</LinearLayout>