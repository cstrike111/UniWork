<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainContainer"
    android:background="#ffffff"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:id="@+id/container">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:id="@+id/leftSpace"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="189dp"
            android:layout_height="match_parent"
            android:layout_weight="1.04"
            android:id="@+id/listContainer"
            android:weightSum="1">

            <TextView
                android:text="Expenditure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expenditure"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="#000000"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemRent"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:id="@+id/rentSpace"
                    android:layout_weight="0.99"
                    android:layout_width="140dp">

                    <TextView
                        android:text="Rent"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/rent"
                        android:textColor="#000000"/>

                    <EditText
                        android:layout_width="157dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="￡"
                        android:ems="10"
                        android:id="@+id/rentInput"
                        android:hint="￡"
                        android:textColor="?attr/colorBackgroundFloating"
                        android:background="@drawable/border" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="51dp"
                    android:id="@+id/rentDay"
                    android:weightSum="1"
                    android:layout_width="100dp">

                    <TextView
                        android:text="Day to be paid on (DD)"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/dd"
                        android:textSize="10sp"
                        android:textColor="#000000"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="3dp" />

                    <EditText
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/inputRentDay"
                        android:textColor="?attr/colorBackgroundFloating"
                        android:background="@drawable/border"
                        android:layout_marginLeft="50dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemFood"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:id="@+id/spaceFood"
                    android:layout_weight="0.93"
                    android:layout_width="140dp">

                    <TextView
                        android:text="Food"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/food"
                        android:textColor="#000000"/>

                    <EditText
                        android:layout_width="157dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="￡"
                        android:ems="10"
                        android:id="@+id/foodInput"
                        android:hint="￡"
                        android:textColor="?attr/colorBackgroundFloating"
                        android:background="@drawable/border" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:id="@+id/foodDay"
                    android:weightSum="1"
                    android:layout_weight="0.08">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:id="@+id/foodTopSpace"></LinearLayout>

                    <EditText
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/inputFoodDay"
                        android:textColor="?attr/colorBackgroundFloating"
                        android:background="@drawable/border"
                        android:layout_marginLeft="50dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemSocial"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="136dp"
                    android:layout_height="match_parent"
                    android:id="@+id/spaceSocial"
                    android:layout_weight="0.93">

                    <TextView
                        android:text="Social"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/social"
                        android:textColor="#000000"/>

                    <EditText
                        android:layout_width="157dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="￡"
                        android:ems="10"
                        android:id="@+id/socialInput"
                        android:hint="￡"
                        android:textColor="?attr/colorBackgroundFloating"
                        android:background="@drawable/border" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:id="@+id/socialDay"
                    android:weightSum="1"
                    android:layout_weight="0.08">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="17dp"
                        android:id="@+id/socialTopSpace"></LinearLayout>

                    <EditText
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/inputSocialDay"
                        android:textColor="?attr/colorBackgroundFloating"
                        android:background="@drawable/border"
                        android:layout_marginLeft="50dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemLoan"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="136dp"
                    android:layout_height="match_parent"
                    android:id="@+id/spaceLoan"
                    android:layout_weight="0.93">

                    <TextView
                        android:text="Small Loan Re-payment"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/loan"
                        android:textColor="#000000"/>

                    <EditText
                        android:layout_width="157dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="￡"
                        android:ems="10"
                        android:id="@+id/loanInput"
                        android:hint="￡"
                        android:textColor="?attr/colorBackgroundFloating"
                        android:background="@drawable/border" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:id="@+id/loanDay"
                    android:weightSum="1"
                    android:layout_weight="0.08">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:id="@+id/loanTopSpace"
                        android:layout_weight="0.07"></LinearLayout>

                    <EditText
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/inputLoanDay"
                        android:textColor="?attr/colorBackgroundFloating"
                        android:background="@drawable/border"
                        android:layout_marginLeft="50dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemSamll"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="136dp"
                    android:layout_height="match_parent"
                    android:id="@+id/spaceSamll"
                    android:layout_weight="0.93">

                    <TextView
                        android:text="Small Purchases"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/samll"
                        android:textColor="#000000"/>

                    <EditText
                        android:layout_width="157dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="￡"
                        android:ems="10"
                        android:id="@+id/samllInput"
                        android:hint="￡"
                        android:textColor="?attr/colorBackgroundFloating"
                        android:background="@drawable/border" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:id="@+id/samllDay"
                    android:weightSum="1"
                    android:layout_weight="0.08">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="17dp"
                        android:id="@+id/samllTopSpace"></LinearLayout>

                    <EditText
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/inputsamllDay"
                        android:textColor="?attr/colorBackgroundFloating"
                        android:background="@drawable/border"
                        android:layout_marginLeft="50dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemOther"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="136dp"
                    android:layout_height="match_parent"
                    android:id="@+id/spaceOther"
                    android:layout_weight="0.93">

                    <TextView
                        android:text="Other"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/other"
                        android:textColor="#000000"/>

                    <EditText
                        android:layout_width="157dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="￡"
                        android:ems="10"
                        android:id="@+id/otherInput"
                        android:hint="￡"
                        android:textColor="?attr/colorBackgroundFloating"
                        android:background="@drawable/border" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:id="@+id/otherDay"
                    android:weightSum="1"
                    android:layout_weight="0.08">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:id="@+id/otherTopSpace"
                        android:layout_weight="0.04"></LinearLayout>

                    <EditText
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/inputotherDay"
                        android:textColor="?attr/colorBackgroundFloating"
                        android:background="@drawable/border"
                        android:layout_marginLeft="50dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonContainer"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/firstRow"
                    android:weightSum="1">

                    <Button
                        android:text="Add Row"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/addRow"
                        android:layout_weight="0.87" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="128dp"
                        android:layout_height="match_parent"
                        android:id="@+id/buttonSpace1"
                        android:layout_weight="0.11"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/secondRow">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="132dp"
                        android:layout_height="match_parent"
                        android:id="@+id/buttonSpace2"
                        android:layout_weight="0.09"></LinearLayout>

                    <Button
                        android:text="Continue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/continueButton" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:id="@+id/rightSpace"
            android:layout_width="22dp"></LinearLayout>
    </LinearLayout>

</LinearLayout>